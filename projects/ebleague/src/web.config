<configuration>
  <system.webServer>

    <!-- indicates that the main.js file is a node.js application
    to be handled by the iisnode module -->

    <handlers>
      <add name="iisnode" path="server\server.mjs" verb="*" modules="iisnode" />
    </handlers>

    <!-- adds main.js to the default document list to allow
    URLs that only specify the application root location,
    e.g. http://mysite.antarescloud.com/ -->

    <defaultDocument enabled="true">
      <files>
        <add value="server\server.mjs" />
      </files>
    </defaultDocument>

    <rewrite>
      <rules>
        <clear />
        <!-- Remote debugging (Azure Website with git deploy): Uncomment the NtvsDebugProxy rule below. -->
        <!--<rule name="NtvsDebugProxy" enabled="true" stopProcessing="true">
          <match url="^ntvs-debug-proxy/.*"/>
        </rule>-->

        <!-- Don't interfere with requests for node-inspector debugging -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.mjs\/debug[\/]?" />
        </rule>

        <rule name="app" enabled="true" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="iisnode.+" negate="true" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
          <action type="Rewrite" url="server/server.mjs" />
        </rule>
      </rules>
    </rewrite>

    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
      <mimeMap fileExtension=".json" mimeType="application/manifest+json"/>
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
    </staticContent>

  </system.webServer>
</configuration>
